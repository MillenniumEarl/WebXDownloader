{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "https://example.com",
            "runtimeArgs": [
                "--load-extension=${workspaceFolder}/src"
            ]
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "Launch Firefox",
            "url": "https://example.com",
            "addonPath": "${workspaceFolder}/src"
        }
    ]
}